{
  "compilerOptions": {
    "outDir": "./dist",        // Specifies the output directory for compiled files
    "target": "ES6",           // Set the target JavaScript version
    "module": "commonjs",      // Specify the module code generation
    "strict": true,            // Enable all strict type-checking options
    "esModuleInterop": true,   // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,      // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],  // Specifies the files to include in the compilation
  "exclude": ["node_modules"]  // Excludes node_modules from the compilation
}